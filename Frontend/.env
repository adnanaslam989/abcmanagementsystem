# ============================================
# BASE CONFIGURATION - Safe to commit
# ============================================

# Application Info
REACT_APP_NAME="PAF HR Management System"
REACT_APP_VERSION=1.0.0

# Default API URL (will be overridden by .env.local)
REACT_APP_API_URL=http://localhost:5000/api

# Authentication
REACT_APP_TOKEN_KEY=auth_token
REACT_APP_REFRESH_TOKEN_KEY=refresh_token
REACT_APP_TOKEN_EXPIRY=24

# UI Configuration
REACT_APP_THEME=default
REACT_APP_PRIMARY_COLOR=#2056AC
REACT_APP_SECONDARY_COLOR=#143267

# Pagination
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_MAX_PAGE_SIZE=100

# Timeouts
REACT_APP_API_TIMEOUT=30000
REACT_APP_LOADING_TIMEOUT=5000